<div class="container-fluid body-content-wrapper">
  <h1>Contact Us</h1>

  <%= flash[:notice] %>

  <%= form_with(url:"/welcome/thank_you", method: "post", local: true) do |form| %>
  <div class="row text-center">
    <div class="col-sm-2 col-md-4"></div>
    <div class="col-sm-2 col-md-4">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
      </div>
      <div class="form-group">
        <%= form.label :message %>
        <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
      </div>
      <%= form.submit "Send", class: "form_label btn btn-default" %>
    </div>  
  </div>
  <% end %>
</div>